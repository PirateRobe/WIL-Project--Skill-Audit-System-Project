@model WebApplication2.Models.Training

@{
    ViewData["Title"] = "Training Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Training Details</h1>
        <p class="text-muted mb-0">@Model.Title</p>
    </div>
    @* <div>
        <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Employee
