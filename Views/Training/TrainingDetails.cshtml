                                     aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">@Model.Progress.ToString("F1")% Complete</small>
                        </div> *@
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }
            </div>
        </div>

        <!-- Certificate Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-file-earmark-pdf me-2"></i>Certificate
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.CertificateUrl))
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle me-2"></i>
                        <strong>Certificate Available</strong>
                    </div>

                    <div class="d-flex align-items-center justify-content-between p-3 bg-light rounded">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-file-earmark-pdf text-danger me-3" style="font-size: 2rem;"></i>
                            <div>
                                <h6 class="mb-1">@(Model.CertificateFileName ?? "Certificate")</h6>
                                @if (Model.CertificateIssueDate.HasValue)
                                {
                                    <small class="text-muted">
                                        Issued on: @Model.CertificateIssueDate.Value.ToString("MMM dd, yyyy")
                                    </small>
                                }
