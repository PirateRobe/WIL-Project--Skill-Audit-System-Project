    </div> *@
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
} 

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Training Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Training Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Title</label>
                            <p class="mb-0">@Model.Title</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Provider</label>
                            <p class="mb-0">@Model.Provider</p>
                        </div>
                        @* <div class="mb-3">
                            <label class="form-label fw-semibold">Status</label>
                            <div>
                                @if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-award me-1"></i>Completed
                                    </span>
                                }
                                else if (Model.Status == "InProgress")
                                {
                                    <span class="badge bg-primary">
                                        <i class="bi bi-play-circle me-1"></i>In Progress
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </div>
                        </div> *@
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Start Date</label>
                            <p class="mb-0">@Model.StartDateDateTime().ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">End Date</label>
                            <p class="mb-0">@Model.EndDateDateTime().ToString("MMM dd, yyyy")</p>
                        </div>
                        @* <div class="mb-3">
                            <label class="form-label fw-semibold">Progress</label>
