    var inProgressTrainings = Model.Count(t => t.Status == "In Progress");
    var pendingTrainings = Model.Count(t => t.Status == "Pending");
    var overdueTrainings = Model.Count(t => !t.IsCompleted() && t.GetEndDate() < DateTime.Now);
