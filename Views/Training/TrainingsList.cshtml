@model List<WebApplication2.Models.Training>
@using WebApplication2.Models

@{
    ViewData["Title"] = "All Trainings";
    ViewData["Subtitle"] = "View all training records";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
    </div>
    <div>
        <a asp-action="CreateTraining" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle me-1"></i>Create Training
        </a>
        <a asp-action="AssignTraining" class="btn btn-outline-primary">
            <i class="bi bi-person-plus me-1"></i>Assign Training
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Trainings</div>
                        <div class="h5 mb-0">@Model.Count</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-journal-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Completed</div>
                        <div class="h5 mb-0">@Model.Count(t => t.Status == "Completed")</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">In Progress</div>
                        <div class="h5 mb-0">@Model.Count(t => t.Status == "In Progress")</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-arrow-clockwise fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Pending</div>
                        <div class="h5 mb-0">@Model.Count(t => t.Status == "Pending")</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="bi bi-list me-2"></i>Training Records
        </h5>
        <div class="d-flex gap-2">
            <div class="input-group input-group-sm" style="width: 250px;">
                <input type="text" id="searchTrainings" class="form-control" placeholder="Search trainings...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-filter me-1"></i>Filter
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item filter-option" data-filter="all" href="#">All Trainings</a></li>
                    <li><a class="dropdown-item filter-option" data-filter="completed" href="#">Completed</a></li>
                    <li><a class="dropdown-item filter-option" data-filter="in-progress" href="#">In Progress</a></li>
                    <li><a class="dropdown-item filter-option" data-filter="pending" href="#">Pending</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item filter-option" data-filter="admin" href="#">Assigned by Admin</a></li>
                    <li><a class="dropdown-item filter-option" data-filter="employee" href="#">Self-Added</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="trainingsTable">
                    <thead>
                        <tr>
                            <th>Training Title</th>
                            <th>Employee</th>
                            <th>Provider</th>
                            <th>Status</th>
                            <th>Progress</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Assigned By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var training in Model)
                        {
                            var startDate = training.GetStartDate();
                            var endDate = training.GetEndDate();
                            var isOverdue = !training.IsCompleted() && endDate < DateTime.Now;

                            <tr class="training-row"
                                data-status="@training.Status?.ToLower().Replace(" ", "-")"
                                data-assignedby="@training.AssignedBy?.ToLower()">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-book text-white"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@training.Title</h6>
                                            <small class="text-muted">@(training.Description?.Length > 100 ? training.Description?.Substring(0, 100) + "..." : training.Description)</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (training.Employee != null)
                                    {
                                        <div>
                                            <strong>@training.Employee.FirstName @training.Employee.LastName</strong>
                                            <br>
                                            <small class="text-muted">@training.Employee.Department</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Employee not found</span>
                                    }
                                </td>
                                <td>@training.Provider</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(training.Status)">
                                        @training.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 6px; width: 80px;">
                                            <div class="progress-bar @GetProgressBarClass(training.Progress)"
                                                 role="progressbar"
                                                 style="width: @(training.Progress * 100)%;"
                                                 aria-valuenow="@(training.Progress * 100)"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"></div>
                                        </div>
                                        <small>@((training.Progress * 100).ToString("F0"))%</small>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @startDate.ToString("MMM dd, yyyy")
                                    </small>
                                </td>
                                <td>
                                    <small class="text-muted @(isOverdue ? "text-danger fw-bold" : "")">
                                        @endDate.ToString("MMM dd, yyyy")
                                        @if (isOverdue)
                                        {
                                            <br>
                                            <span class="badge bg-danger">Overdue</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    @if (training.AssignedBy == "admin")
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-person-gear me-1"></i>Admin
                                        </span>
                                    }
                                    else if (training.AssignedBy == "employee")
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-person me-1"></i>Self
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Unknown</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="#" class="btn btn-outline-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (training.AssignedBy == "employee" && training.Status != "Completed")
                                        {
                                            <a href="#" class="btn btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (training.AssignedBy == "employee")
                                        {
                                            <button type="button" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-muted">No Training Records Found</h4>
                <p class="text-muted mb-4">Get started by creating your first training record or assigning training programs to employees.</p>
                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="CreateTraining" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Create Training
                    </a>
                    <a asp-action="AssignTraining" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-1"></i>Assign Training
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Search functionality
            const searchInput = document.getElementById('searchTrainings');
            const trainingRows = document.querySelectorAll('.training-row');

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();

                trainingRows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });

            // Filter functionality
            const filterOptions = document.querySelectorAll('.filter-option');

            filterOptions.forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filter = this.getAttribute('data-filter');

                    trainingRows.forEach(row => {
                        if (filter === 'all') {
                            row.style.display = '';
                        } else if (filter === 'completed') {
                            row.style.display = row.getAttribute('data-status') === 'completed' ? '' : 'none';
                        } else if (filter === 'in-progress') {
                            row.style.display = row.getAttribute('data-status') === 'in-progress' ? '' : 'none';
                        } else if (filter === 'pending') {
                            row.style.display = row.getAttribute('data-status') === 'pending' ? '' : 'none';
                        } else if (filter === 'admin') {
                            row.style.display = row.getAttribute('data-assignedby') === 'admin' ? '' : 'none';
                        } else if (filter === 'employee') {
                            row.style.display = row.getAttribute('data-assignedby') === 'employee' ? '' : 'none';
                        }
                    });
                });
            });

            // Add hover effects
            trainingRows.forEach(row => {
                row.style.transition = 'all 0.2s ease';
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'translateY(-2px)';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });

            // Auto-refresh every 2 minutes
            setInterval(function() {
                location.reload();
            }, 120000);
        });
    </script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "bg-success",
            "in progress" => "bg-primary",
            "pending" => "bg-warning",
            "cancelled" => "bg-danger",
            "assigned" => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetProgressBarClass(double progress)
    {
        var percentage = progress * 100;
        if (percentage >= 80) return "bg-success";
        if (percentage >= 50) return "bg-warning";
        return "bg-danger";
    }
}

<style>
    .training-row:hover {
        background-color: #f8f9fa;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
    }

    .progress {
        background-color: #e9ecef;
    }

    .badge {
        font-size: 0.75rem;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        color: #6c757d;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>