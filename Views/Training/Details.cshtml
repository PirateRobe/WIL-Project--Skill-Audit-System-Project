@model WebApplication2.Models.Support_Model.TrainingAssignment

@{
    ViewData["Title"] = "Training Assignment Details";
    ViewData["Subtitle"] = Model?.TrainingProgram?.Title ?? "Unknown Program";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">
            <i class="bi bi-pencil me-1"></i>Edit Assignment
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Overview
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Assignment Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Assignment Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Status</label>
                            <div>
                                @if (Model.Status == "Pending")
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-clock me-1"></i>Pending
                                    </span>
                                }
                                else if (Model.Status == "Accepted")
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-check-circle me-1"></i>Accepted
                                    </span>
                                }
                                else if (Model.Status == "InProgress")
                                {
                                    <span class="badge bg-primary">
                                        <i class="bi bi-play-circle me-1"></i>In Progress
                                    </span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-award me-1"></i>Completed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Progress</label>
                            <div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar @GetProgressBarClass(Model.Progress)"
                                         role="progressbar"
                                         style="width: @Model.Progress%;"
                                         aria-valuenow="@Model.Progress"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                    </div>
                                </div>
                                <small class="text-muted">@Model.Progress% Complete</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Assigned Date</label>
                            <p class="mb-0">@Model.AssignedDate.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Due Date</label>
                            <p class="mb-0 @GetDueDateClass(Model.DueDate)">
                                @Model.DueDate.ToString("MMM dd, yyyy")
                                @if (Model.DueDate < DateTime.UtcNow && Model.Status != "Completed")
                                {
                                    <span class="badge bg-danger ms-1">Overdue</span>
                                }
                            </p>
                        </div>

                        @if (Model.AcceptedDate.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Accepted Date</label>
                                <p class="mb-0">@Model.AcceptedDate.Value.ToString("MMM dd, yyyy")</p>
                            </div>
                        }

                        @if (Model.CompletedDate.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Completed Date</label>
                                <p class="mb-0">@Model.CompletedDate.Value.ToString("MMM dd, yyyy")</p>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Assignment Reason</label>
                            <p class="mb-0">@Model.AssignedReason</p>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.CertificateFileName))
                {
                    <div class="mt-3 p-3 bg-light rounded">
                        <label class="form-label fw-semibold">Certificate</label>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-file-earmark-pdf text-danger me-2" style="font-size: 1.5rem;"></i>
                            <div>
                                <div>@Model.CertificateFileName</div>
                                @if (!string.IsNullOrEmpty(Model.CertificateUrl))
                                {
                                    <a href="@Model.CertificateUrl" target="_blank" class="btn btn-sm btn-outline-primary mt-1">
                                        <i class="bi bi-download me-1"></i>Download Certificate
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Skills Information -->
        @if (Model.TrainingProgram?.CoveredSkills?.Any() == true)
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-tools me-2"></i>Skills Covered
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var skill in Model.TrainingProgram.CoveredSkills)
                        {
                            <span class="badge bg-primary">@skill</span>
                        }
                    </div>

                    @if (Model.Status == "Completed")
                    {
                        <div class="mt-3 alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Skills Updated:</strong> These skills have been added to the employee's profile.
                        </div>
                    }
                    else
                    {
                        <div class="mt-3 alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> These skills will be added to the employee's profile upon completion.
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Employee Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-person me-2"></i>Employee Information
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Employee != null)
                {
                    <div class="text-center mb-3">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2"
                             style="width: 60px; height: 60px;">
                            <i class="bi bi-person text-white" style="font-size: 1.5rem;"></i>
                        </div>
                        <h5 class="mb-1">@Model.Employee.FirstName @Model.Employee.LastName</h5>
                        <p class="text-muted mb-2">@Model.Employee.Position</p>
                        <span class="badge bg-secondary">@Model.Employee.Department</span>
                    </div>

                    <div class="border-top pt-3">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="h6 mb-0">@Model.Employee.Email</div>
                                <small class="text-muted">Email</small>
                            </div>
                            <div class="col-6">
                                <div class="h6 mb-0">@Model.Employee.Phone</div>
                                <small class="text-muted">Phone</small>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted">Employee information not available.</p>
                }
            </div>
        </div>

        <!-- Training Program Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-play-circle me-2"></i>Training Program
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TrainingProgram != null)
                {
                    <h6 class="mb-2">@Model.TrainingProgram.Title</h6>
                    <p class="text-muted small mb-3">@Model.TrainingProgram.Description</p>

                    <div class="mb-2">
                        <small class="text-muted">Provider:</small>
                        <div class="fw-semibold">@Model.TrainingProgram.Provider</div>
                    </div>

                    <div class="mb-2">
                        <small class="text-muted">Duration:</small>
                        <div class="fw-semibold">@Model.TrainingProgram.Duration hours</div>
                    </div>

                    <div class="mb-2">
                        <small class="text-muted">Difficulty:</small>
                        <div>
                            @if (Model.TrainingProgram.DifficultyLevel == "Beginner")
                            {
                                <span class="badge bg-success">@Model.TrainingProgram.DifficultyLevel</span>
                            }
                            else if (Model.TrainingProgram.DifficultyLevel == "Intermediate")
                            {
                                <span class="badge bg-warning">@Model.TrainingProgram.DifficultyLevel</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@Model.TrainingProgram.DifficultyLevel</span>
                            }
                        </div>
                    </div>

                    <div class="mb-2">
                        <small class="text-muted">Format:</small>
                        <div class="fw-semibold">@Model.TrainingProgram.Format</div>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-action="ProgramDetails" asp-route-id="@Model.TrainingProgram.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye me-1"></i>View Program Details
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted">Training program information not available.</p>
                }
            </div>
        </div>

        @* <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.Status == "Pending")
                    {
                        <button type="button" class="btn btn-success btn-accept" data-assignment-id="@Model.Id">
                            <i class="bi bi-check-circle me-1"></i>Accept Training
                        </button>
                    }

                    @if (Model.Status == "Accepted")
                    {
                        <button type="button" class="btn btn-primary btn-start" data-assignment-id="@Model.Id">
                            <i class="bi bi-play-circle me-1"></i>Start Training
                        </button>
                    }

                    @if (Model.Status == "InProgress" && Model.Progress < 100)
                    {
                        <div class="mb-2">
                            <label class="form-label fw-semibold">Update Progress</label>
                            <div class="input-group">
                                <input type="number" class="form-control progress-input" min="0" max="100" value="@Model.Progress">
                                <button class="btn btn-outline-primary btn-update-progress" type="button" data-assignment-id="@Model.Id">
                                    Update
                                </button>
                            </div>
                        </div>

                        <button type="button" class="btn btn-success btn-complete" data-assignment-id="@Model.Id">
                            <i class="bi bi-award me-1"></i>Mark as Complete
                        </button>
                    }

                    @if (Model.Status == "Completed")
                    {
                        <button type="button" class="btn btn-outline-secondary" disabled>
                            <i class="bi bi-award me-1"></i>Training Completed
                        </button>
                    }

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil me-1"></i>Edit Assignment
                    </a>

                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete Assignment
                    </button>
                </div>
            </div>
        </div> *@
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Training Assignment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this training assignment?</p>
                <p class="text-danger small mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    This action cannot be undone. The assignment will be removed from both the main list and the employee's training records.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete Assignment</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Accept Training
            document.querySelectorAll('.btn-accept').forEach(button => {
                button.addEventListener('click', function() {
                    const assignmentId = this.getAttribute('data-assignment-id');
                    if (confirm('Are you sure you want to accept this training assignment?')) {
                        updateAssignmentStatus(assignmentId, 'accept');
                    }
                });
            });

            // Start Training
            document.querySelectorAll('.btn-start').forEach(button => {
                button.addEventListener('click', function() {
                    const assignmentId = this.getAttribute('data-assignment-id');
                    if (confirm('Are you ready to start this training?')) {
                        updateAssignmentStatus(assignmentId, 'start');
                    }
                });
            });

            // Update Progress
            document.querySelectorAll('.btn-update-progress').forEach(button => {
                button.addEventListener('click', function() {
                    const assignmentId = this.getAttribute('data-assignment-id');
                    const progressInput = this.closest('.input-group').querySelector('.progress-input');
                    const progress = parseInt(progressInput.value);

                    if (progress >= 0 && progress <= 100) {
                        updateProgress(assignmentId, progress);
                    } else {
                        alert('Please enter a progress value between 0 and 100.');
                    }
                });
            });

            // Complete Training
            document.querySelectorAll('.btn-complete').forEach(button => {
                button.addEventListener('click', function() {
                    const assignmentId = this.getAttribute('data-assignment-id');
                    if (confirm('Have you completed this training and uploaded the certificate?')) {
                        updateAssignmentStatus(assignmentId, 'complete');
                    }
                });
            });

            function updateAssignmentStatus(assignmentId, action) {
                const url = getActionUrl(action);
                const data = { assignmentId: assignmentId };

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the assignment.');
                });
            }

            function updateProgress(assignmentId, progress) {
                const url = '@Url.Action("UpdateProgress", "Training")';
                const data = { assignmentId: assignmentId, progress: progress };

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating progress.');
                });
            }

            function getActionUrl(action) {
                switch (action) {
                    case 'accept': return '@Url.Action("AcceptTraining", "Training")';
                    case 'start': return '@Url.Action("StartTraining", "Training")';
                    case 'complete': return '@Url.Action("CompleteTraining", "Training")';
                    default: return '';
                }
            }
        });
    </script>
}

@functions {
    private string GetProgressBarClass(int progress)
    {
        if (progress >= 100) return "bg-success";
        if (progress >= 75) return "bg-primary";
        if (progress >= 50) return "bg-info";
        if (progress >= 25) return "bg-warning";
        return "bg-danger";
    }

    private string GetDueDateClass(DateTime dueDate)
    {
        if (dueDate < DateTime.UtcNow) return "text-danger";
        if (dueDate < DateTime.UtcNow.AddDays(7)) return "text-warning";
        return "";
    }
}