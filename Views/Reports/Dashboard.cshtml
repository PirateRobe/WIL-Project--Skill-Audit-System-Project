@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Quick report generation
            document.querySelectorAll('.quick-report-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const reportType = this.getAttribute('data-type');
                    generateQuickReport(reportType);
                });
            });

            // Generate all standard reports
            document.getElementById('generateAllReports').addEventListener('click', function() {
                const btn = this;
                const originalText = btn.innerHTML;

                btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Generating...';
                btn.disabled = true;

                // Generate multiple reports in sequence
                const reportTypes = ['SkillsAndTraining', 'DepartmentPerformance', 'SkillGapAnalysis', 'TrainingCompletion'];
                let completed = 0;

                reportTypes.forEach(type => {
                    fetch('@Url.Action("GenerateQuickReport")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(type)
                    })
                    .then(response => response.json())
                    .then(data => {
                        completed++;
                        if (completed === reportTypes.length) {
                            btn.innerHTML = originalText;
                            btn.disabled = false;
                            showNotification('All standard reports generated successfully!', 'success');
                            setTimeout(() => {
                                window.location.href = '@Url.Action("Index")';
                            }, 2000);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                        showNotification('Error generating reports', 'error');
                    });
                });
            });

            function generateQuickReport(reportType) {
                const btn = document.querySelector(`.quick-report-btn[data-type="${reportType}"]`);
                const originalText = btn.innerHTML;

                btn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Generating...';
                btn.disabled = true;

                fetch('@Url.Action("GenerateQuickReport")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(reportType)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Report generated successfully!', 'success');
                        setTimeout(() => {
                            window.location.href = '@Url.Action("Details")' + '?id=' + data.reportId;
                        }, 1000);
                    } else {
                        showNotification('Error: ' + data.message, 'error');
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Error generating report', 'error');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });
            }

            function showNotification(message, type) {
                const notification = document.createElement('div');
                notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                notification.style.cssText = 'top: 20px; right: 20px; z-index: 1060; min-width: 300px;';
                notification.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;

                document.body.appendChild(notification);

                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.remove();
                    }
                }, 5000);
            }
        });
    </script>
}

