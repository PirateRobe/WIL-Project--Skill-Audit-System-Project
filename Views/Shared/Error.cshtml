@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Development Mode</h3>
<p>
    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
</p>
<p>
    <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
    It can result in displaying sensitive information from exceptions to end users.
    For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
    and restarting the app.
</p>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle display-1 text-danger"></i>
                    <h1 class="h3 text-danger mt-3">Error</h1>

                    @if (ViewBag.Error != null)
                    {
                        <p class="lead">@ViewBag.Error</p>
                    }
                    else
                    {
                        <p class="lead">An error occurred while processing your request.</p>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("EmployeeSkills")" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i>Back to Dashboard
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Go Back
                        </a>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="mt-4">
                            <details>
                                <summary class="text-muted">Error Details</summary>
                                <pre class="text-start mt-2 p-3 bg-light border rounded" style="font-size: 0.8rem;">@ViewBag.Error</pre>
                            </details>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>